# Define a global platform for the project to satisfy plugin minimums
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

def patch_flutter_contacts_startup_crash
  plugin_swift = File.expand_path(
    File.join(
      __dir__,
      '.symlinks',
      'plugins',
      'flutter_contacts',
      'ios',
      'Classes',
      'SwiftFlutterContactsPlugin.swift'
    )
  )
  return unless File.exist?(plugin_swift)

  source = File.read(plugin_swift)
  needle = '        let rootViewController = UIApplication.shared.delegate!.window!!.rootViewController!'
  replacement = <<~'SWIFT'.rstrip
        let rootViewController =
            UIApplication.shared.delegate?.window??.rootViewController ??
            UIApplication.shared.connectedScenes
                .compactMap { $0 as? UIWindowScene }
                .flatMap { $0.windows }
                .first(where: { $0.isKeyWindow })?
                .rootViewController ??
            UIViewController()
  SWIFT
  return if source.include?(replacement)

  patched = source.sub(needle, replacement)
  return if patched == source

  File.write(plugin_swift, patched)
  Pod::UI.puts 'Applied flutter_contacts iOS startup patch (nil-safe root view controller).'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
  patch_flutter_contacts_startup_crash
end
